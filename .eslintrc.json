{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "cypress/globals": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:cypress/recommended",
    "plugin:playwright/recommended",
    "prettier"
  ],
  "plugins": ["@typescript-eslint", "cypress", "playwright"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "@typescript-eslint/no-explicit-any": "off"
  }
}
